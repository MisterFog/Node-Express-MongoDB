<div class='auth'>
  <div class='row'>
    <div class='col s12'>
      <ul class='tabs'>
        <li class='tab col s6'><a class='active' href='#login'>Login</a></li>
        <li class='tab col s6'><a href='#register'>Registration</a></li>
      </ul>
    </div>
    <div id='login' class='col s6 offset-s3'>

      {{#if loginError}}
        <p class='alert'>{{loginError}}</p>
      {{/if}}

      <h2>Inter the store</h2>
      <form class='col s12' action='/auth/login' method='post' novalidate>
        <div class='input-field'>
          <input
            id='email'
            name='email'
            type='email'
            class='validate'
            required
            value='{{data.email}}'
          />
          <label for='email'>Email</label>
          <span class='helper-text' data-error='Inter email address'></span>
        </div>
        <div class='input-field'>
          <input
            id='password'
            name='password'
            type='password'
            class='validate'
            required
            value='{{data.password}}'
          />
          <label for='password'>Password</label>
          <span class='helper-text' data-error='Inter password'></span>
        </div>
        <input type='hidden' name='_csrf' value='{{csrf}}' />
        <p><a href='/auth/reset'>Forgot your password?</a></p>
        <button class='btn btn-primary' type='submit'>Inter</button>
      </form>
    </div>

    <div id='register' class='col s6 offset-s3'>

      {{#if registerError}}
        <p class='alert'>{{registerError}}</p>
      {{/if}}

      <h2>Create account</h2>
      <form class='col s12' action='/auth/register' method='post'>
        <div class='input-field'>
          <input id='reg_email' name='email' type='email' class='validate' required />
          <label for='reg_email'>Email</label>
          <span class='helper-text' data-error='Inter email address'></span>
        </div>
        <div class='input-field'>
          <input id='reg_name' name='name' type='text' class='validate' />
          <label for='reg_name'>Name</label>
          <span class='helper-text' data-error='Inter your name'></span>
        </div>
        <div class='input-field'>
          <input id='reg_password' name='password' type='password' class='validate' required />
          <label for='reg_password'>Password</label>
          <span class='helper-text' data-error='Inter password'></span>
        </div>

        <div class='input-field'>
          <input id='confirm' name='confirm' type='password' class='validate' required />
          <label for='confirm'>Repeat password</label>
          <span class='helper-text' data-error='Inter password'></span>
        </div>
        <input type='hidden' name='_csrf' value='{{csrf}}' />
        <button class='btn btn-primary' type='submit'>Registration</button>
      </form>
    </div>
  </div>
</div>